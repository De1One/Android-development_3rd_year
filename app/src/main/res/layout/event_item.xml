<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.app.ui.events.adapter.EventReminderVM" />
    </data>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/textPaddingMedium">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/textPaddingSmall"
            android:onClick="@{() -> viewModel.onClick.invoke()}">

        <TextView
            android:id="@+id/eventsItem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.data.title}"
            android:maxLines="2"
            android:textSize="@dimen/textMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/eventsItem_description"
            tools:text="Event"/>

        <TextView
            android:id="@+id/eventsItem_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/textPaddingSmall"
            android:layout_marginEnd="@dimen/textPaddingSmall"
            android:textSize="@dimen/textSmall"
            android:maxLines="3"
            android:text="@{viewModel.data.desc}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventsItem_title"
            tools:text="Description"/>

        <TextView
            android:id="@+id/eventsItem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/textPaddingSmall"
            app:layout_constraintTop_toBottomOf="@+id/eventsItem_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="11.11.11"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>